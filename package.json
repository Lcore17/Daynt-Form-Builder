{
  "name": "dynamic-form-builder-monorepo",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/api",
    "apps/web"
  ],
  "scripts": {
    "dev": "concurrently -n api,web -c blue,green \"npm:dev -w apps/api\" \"npm:dev -w apps/web\"",
    "build": "npm run -w apps/api build && npm run -w apps/web build",
    "build:api": "cd apps/api && npm run build",
    "start": "concurrently -n api,web -c blue,green \"npm:start:prod -w apps/api\" \"npm:start -w apps/web\"",
    "start:api": "cd apps/api && npm run start:prod",
    "prisma:generate": "cd apps/api && npx prisma generate",
    "prisma:deploy": "cd apps/api && npx prisma migrate deploy",
    "lint": "echo 'lint placeholder'",
    "format": "echo 'format placeholder'"
  },
  "devDependencies": {
    "concurrently": "^9.0.1",
    "dotenv": "^16.4.5"
  }
}
